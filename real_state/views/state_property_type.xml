<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="smart_model_offer_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">state_property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': False}</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate_property.type.view.form</field>
        <field name="model">estate_property.type</field>
        <field name="arch" type="xml">
            <form >     
                                   
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(smart_model_offer_action)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-bars">
                            <div class="o_form_field o_stat_info">
                                <field name="offer_count"/>
                                <span> Offers</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                        </div>
                        <notebook>
                            <page string="Propiedades">
                                <field name="property_id" >
                                    <tree>
                                        <field name="title" /> 
                                        <field name="selling_price" />
                                        <field name="state" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
     </record>
    <record id="estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate_property.type.view.tree</field>
        <field name="model">estate_property.type</field>
        <field name="arch" type="xml">
            <tree string="manuality">
                <field name="name"/>
                <field name="sequence" widget="handle"/>
                <field name="property_offers_ids"/>
                <field name="offer_count"/>

            </tree>
        </field>
    </record>    
</odoo>
